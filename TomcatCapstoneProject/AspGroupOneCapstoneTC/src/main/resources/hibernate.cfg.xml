<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>
        
        <!-- SQL Dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
 
        <!-- Database Connection Settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://aspgroup1@finalaspgroup1.chxan6yoffks.us-east-2.rds.amazonaws.com:3306/aspgroup1</property>
        <property name="hibernate.connection.username">aspgroup1</property>
        <property name="hibernate.connection.password">finalaspgroup1</property>
        <property name="show_sql">true</property>
        
        <property name="hibernate.connection.provider_class">org.hibernate.c3p0.internal.C3P0ConnectionProvider</property>
        <property name="hibernate.c3p0.acquire_increment">1</property>
        <property name="hibernate.c3p0.min_size">1</property>
        <property name="hibernate.c3p0.max_size">8</property>
        <property name="hibernate.c3p0.max_statements">25</property>
        <property name="hibernate.c3p0.timeout">100</property>
        <property name="hibernate.c3p0.idle_test_period">45</property>
        <property name="hibernate.c3p0.maxConnectionAge">50</property>
 
        <!-- Specifying Session Context -->
        <property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>

        <!-- Mapping Classes -->
        <mapping class="org.aspgroup1.entity.Doctor"/>
        <mapping class="org.aspgroup1.entity.User"/>
        <mapping class="org.aspgroup1.entity.Appointment"/>

    </session-factory>

</hibernate-configuration>
